<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txt_score"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_clouds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_cloud_one"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/img_cloud_two"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/img_cloud_three"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/img_cloud_four"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/cloud" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_1"
        android:layout_marginStart="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_2"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_3"
        android:layout_marginStart="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_4"
        android:layout_marginTop="80dp"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_5"
        android:layout_marginTop="43dp"
        android:layout_marginStart="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_6"
        android:layout_marginTop="120dp"
        android:layout_marginStart="270dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_7"
        android:layout_marginStart="320dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_8"
        android:layout_marginTop="90dp"
        android:layout_marginStart="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_9"
        android:layout_marginTop="120dp"
        android:layout_marginStart="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/item_10"
        android:layout_marginStart="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_clouds"
        android:src="@drawable/water_drop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>